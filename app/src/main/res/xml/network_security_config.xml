<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext traffic for RuStore API (if needed in future) -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">apps.rustore.ru</domain>
        <domain includeSubdomains="true">api.rustore.ru</domain>
    </domain-config>
    
    <!-- Default configuration: only allow HTTPS -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>

